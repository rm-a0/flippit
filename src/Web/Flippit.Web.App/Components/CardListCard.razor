
<div class="font-monserrat-m flex h-56 w-48 flex-col bg-contain bg-center bg-no-repeat p-6 pt-10"
     style="background-image: url('/icons/card-bg.svg')">
     <div class="flex-1">
        @{
            if(!string.IsNullOrEmpty(QuestionType) && !string.IsNullOrEmpty(Question))
            {
                if(QuestionType.ToLower() == "text")
                {
                    <p>@Question</p>
                }
                else if(QuestionType.ToLower() == "image")
                {
                    <div>
                        <img src="@Question"/>
                    </div>
                
                }
            }
        }
     </div>
     <div class="flex flex-row items-center justify-end gap-1">
         <div class="cursor-pointer">
            <svg class="scale-75" width="24" height="27" viewBox="0 0 24 27" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M2.75041 6.21907C2.90822 9.66751 3.29147 17.6057 3.56193 21.7709C3.77167 25.0009 7.16817 25.9632 8.97129 25.9632C10.7744 25.9632 14.7728 25.9632 16.3416 25.9632C18.3025 25.9632 19.8576 23.9347 19.9929 21.7709C20.1011 20.04 20.3986 10.6818 20.5338 6.21907M2.75041 6.21907H7.40067M2.75041 6.21907H1M20.5338 6.21907H16.0184M20.5338 6.21907H22.2069M7.40067 6.21907C7.40067 5.47194 7.40067 3.78086 7.40067 2.99355C7.40067 2.00941 8.58669 1 11.4382 1C14.2897 1 16.0184 1.78909 16.0184 2.75718C16.0184 3.53165 16.0184 5.3878 16.0184 6.21907M7.40067 6.21907H16.0184" stroke="black" stroke-width="2" stroke-linecap="round" />
                <line x1="8.69629" y1="11.0005" x2="8.69629" y2="21.2825" stroke="black" stroke-width="2" stroke-linecap="round" />
                <line x1="14.5283" y1="11.0005" x2="14.5283" y2="21.2825" stroke="black" stroke-width="2" stroke-linecap="round" />
            </svg>
         </div>
        <NavLink href="@($"/cards/{Id}/edit")">
            <div class="cursor-pointer">
                <svg class="scale-75" width="27" height="24" viewBox="0 0 27 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M13.8887 3.95764H2C1.44771 3.95764 1 4.40536 1 4.95764V21.2221C1 21.7744 1.44772 22.2221 2 22.2221H18.1954C18.7477 22.2221 19.1954 21.7744 19.1954 21.2221V15.8123M20.5738 1.40757L9.17835 12.803C9.01512 12.9663 8.91339 13.1809 8.89042 13.4106L8.56546 16.6602C8.50247 17.2901 9.0332 17.8193 9.6629 17.7545L12.7767 17.4339C13.0054 17.4104 13.2189 17.3088 13.3815 17.1463L25.0882 5.4395C25.4385 5.1344 25.7249 4.11003 24.0682 2.45336C21.9974 0.382518 20.9657 1.01573 20.5738 1.40757Z" stroke="black" stroke-width="2" stroke-linecap="round" />
                </svg>
            </div>
         </NavLink>

     </div>
    
</div>



@code {
    [Parameter]
    public int Id { get; set; }

    [Parameter]
    public string? QuestionType { get; set; }

    [Parameter]
    public string? Question { get; set; }
}
