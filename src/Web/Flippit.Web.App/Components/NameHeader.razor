<header class="flex flex-row justify-between py-4">
    <div class="size-12 cursor-pointer">
        <NavLink href="/">
            <img draggable="false" class="h-full w-full object-contain" src="/icons/flippit-logo-small.svg" />
        </NavLink>
    </div>

    <div class="flex flex-row items-center gap-6">

        @{
            if (!string.IsNullOrEmpty(Name))
            {
                <h1 class="font-monserrat-b text-3xl">@Name</h1>
            }
            if(ChildContent!=null)
            {
                @ChildContent

            }
        }
        
    </div>

    <div class="size-12 cursor-pointer">
        <img draggable="false" class="h-full w-full object-contain" src="/icons/user.svg" />
    </div>

</header>

@code {
    [Parameter]
    public string? Name { get; set; }
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}